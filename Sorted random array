#include <iostream>
#include <ctime>
using namespace std;
 
 
int main()
{
	int size;//1, size2;
int* N = new int[size];//1][size2]; // динамический массив твой
srand (time(NULL));
int num;
cout<<"Enter array size ";
cin>>size;//1>>size2;
cout<<"Your array: "<<endl;
for(int i = 0; i < size; i++)
{
//	for(int j = 0; j < size2; j++){
   num = rand() % 20 + 1; // случайные числа от 0 до 20
N[i] = num;
	cout<<N[i]<<" ";
}
cout<<endl<<"Your sorted array: "<<endl;
//for (int i = 0; i < razmer; i++){
	for (int i = 0; i < size - 1; i++) {
       for (int j = 0; j < size - i - 1; j++) {
            if (N[j] > N[j + 1]) {
                // меняем элементы местами
                num = N[j];
                N[j] = N[j + 1];
                N[j + 1] = num;
            }
        }
    }
for(int i = 0; i < size; i++) {
	cout << N[i] << " " ;
	}
cout << endl;
delete []N;
    system("pause");
    return 0;
}
